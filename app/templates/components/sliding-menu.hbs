<div class="menu-container">
  <div class="menu">
    {{#if menuManager.columnState.visible}}
      {{menu-content}}
    {{/if}}
  </div>
  <div class="container">
    <div class="hide-menu" {{action "hide"}}>
      <div>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </div>
    </div>
    <div class="show-menu" {{action "show"}}>
      <div>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </div>
    </div>
  </div>
</div>